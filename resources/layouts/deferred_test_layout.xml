<root>
	<panel name="settings" size="340,650" opacity="0.9" padding="20,20,20,20" active="regular_panel.png">
	<vbox>
		<text text="Bloom:" font="resources/font/Lobster.ttf, 23"/>
		<text text="Radius:" />
		<hbox>
			<hslider name="bloom_radius" min="0" max="200" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="bloom_radius_value" text="0.0"/>
		</hbox>
		<text text="Step:" />
		<hbox>
			<hslider name="bloom_step" min="1" max="10" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="bloom_step_value" text="0.0"/>
		</hbox>
		<text text="Threshold:" />
		<hbox>
			<hslider name="bloom_threshold" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="bloom_threshold_value" text="0.0"/>
		</hbox>
		<hbox>
			<text text="Enable:" alignment="CENTER"/>
			<toggle name="bloom_enabled" set_checked="1" active="big_checkbox_active.png" checked="big_checkbox_checked.png" disabled_active="big_checkbox_active.png" disabled_checked="big_checkbox_checked.png" />
		</hbox>

		<spacing spacing="20"/>

		<text text="SSAO:" font="resources/font/Lobster.ttf, 23"/>
		<text text="Screen radius:" />
		<hbox>
			<hslider name="ssao_sradius" min="1" max="20" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="ssao_sradius_value" text="0.0"/>
		</hbox>
		<text text="View radius:" />
		<hbox>
			<hslider name="ssao_vradius" min="0.01" max="4" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="ssao_vradius_value" text="0.0"/>
		</hbox>
		<text text="Power:" />
		<hbox>
			<hslider name="ssao_power" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="ssao_power_value" text="0.0"/>
		</hbox>
		<hbox>
			<text text="Enable:" alignment="CENTER"/>
			<toggle name="ssao_enabled" set_checked="1" active="big_checkbox_active.png" checked="big_checkbox_checked.png" disabled_active="big_checkbox_active.png" disabled_checked="big_checkbox_checked.png" />
		</hbox>

		<spacing spacing="20"/>

		<text text="Depth of field:" font="resources/font/Lobster.ttf, 23"/>
		<text text="Near radius:" />
		<hbox>
			<hslider name="dof_near" width="230" min="1" max="200" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="dof_near_value" text="0.0"/>
		</hbox>
		<text text="Far radius:" />
		<hbox>
			<hslider name="dof_far" width="230" min="1" max="200" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="dof_far_value" text="0.0"/>
		</hbox>
		<text text="Focus start:" />
		<hbox>
			<hslider name="dof_start" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="dof_start_value" text="0.0"/>
		</hbox>
		<text text="Focus end:" />
		<hbox>
			<hslider name="dof_end" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="dof_end_value" text="0.0"/>
		</hbox>
		<hbox>
			<text text="Enable:" alignment="CENTER"/>
			<toggle name="dof_enabled" set_checked="1" active="big_checkbox_active.png" checked="big_checkbox_checked.png" disabled_active="big_checkbox_active.png" disabled_checked="big_checkbox_checked.png" />
		</hbox>

		<spacing spacing="20"/>

		<text text="SSRR:" font="resources/font/Lobster.ttf, 23"/>
		<text text="Step:" />
		<hbox>
			<hslider name="ssrr_step" min="0.0001" max="1" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="ssrr_step_value" text="0.0"/>
		</hbox>
		<text text="Max samples:" />
		<hbox>
			<hslider name="ssrr_max_samples" min="0" max="200" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="ssrr_max_samples_value" text="0.0"/>
		</hbox>
		<text text="Num refinements:" />
		<hbox>
			<hslider name="ssrr_num_refinements" min="0" max="20" width="230" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
			<text name="ssrr_num_refinements_value" text="0.0"/>
		</hbox>
		<hbox>
			<text text="Enable:" alignment="CENTER"/>
			<toggle name="ssrr_enabled" set_checked="1" active="big_checkbox_active.png" checked="big_checkbox_checked.png" disabled_active="big_checkbox_active.png" disabled_checked="big_checkbox_checked.png" />
		</hbox>

	</vbox>
	</panel>

	<button name="btn_logo" position="700,550" active="btn_logo_active.png" hover="btn_logo_hover.png" pressed="btn_logo_hover.png" disabled="btn_logo_active.png" focused="btn_logo_active.png" />
</root>
