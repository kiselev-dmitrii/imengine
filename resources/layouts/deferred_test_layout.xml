<root>
	<panel name="settings" size="300,500" padding="20,20,20,20" active="regular_panel.png">
	<vbox>
		<text text="Bloom:" font="resources/font/Lobster.ttf, 23"/>
		<text text="Radius:" />
		<hslider name="bloom_radius" min="0" max="200" width="260" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
		<text text="Step:" />
		<hslider name="bloom_step" min="1" max="10" width="260" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
		<text text="Threshold:" />
		<hslider name="bloom_threshold" width="260" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
		<hbox>
			<text text="Enable:" alignment="CENTER"/>
			<toggle name="bloom_enabled" set_checked="1" active="big_checkbox_active.png" checked="big_checkbox_checked.png" disabled_active="big_checkbox_active.png" disabled_checked="big_checkbox_checked.png" />
		</hbox>

		<spacing spacing="20"/>

		<text text="SSAO:" font="resources/font/Lobster.ttf, 23"/>
		<text text="Screen radius:" />
		<hslider name="ssao_sradius" min="1" max="20" width="260" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
		<text text="View radius:" />
		<hslider name="ssao_vradius" min="0.01" max="4" width="260" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
		<text text="Power:" />
		<hslider name="ssao_power" width="260" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
		<hbox>
			<text text="Enable:" alignment="CENTER"/>
			<toggle name="ssao_enabled" set_checked="1" active="big_checkbox_active.png" checked="big_checkbox_checked.png" disabled_active="big_checkbox_active.png" disabled_checked="big_checkbox_checked.png" />
		</hbox>

		<spacing spacing="20"/>

		<text text="Depth of field:" font="resources/font/Lobster.ttf, 23"/>
		<text text="Near radius:" />
		<hslider name="dof_near" width="260" min="1" max="200" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
		<text text="Far radius:" />
		<hslider name="dof_far" width="260" min="1" max="200" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
		<text text="Focus start:" />
		<hslider name="dof_start" width="260" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
		<text text="Focus end:" />
		<hslider name="dof_end" width="260" background="slider_background.png" selection="slider_selection.png" active="slider_btn_active.png" hover="slider_btn_hover.png" />
		<hbox>
			<text text="Enable:" alignment="CENTER"/>
			<toggle name="dof_enabled" set_checked="1" active="big_checkbox_active.png" checked="big_checkbox_checked.png" disabled_active="big_checkbox_active.png" disabled_checked="big_checkbox_checked.png" />
		</hbox>
	</vbox>
	</panel>

	<button name="btn_logo" position="700,550" active="btn_logo_active.png" hover="btn_logo_hover.png" pressed="btn_logo_hover.png" disabled="btn_logo_active.png" focused="btn_logo_active.png" />
</root>
